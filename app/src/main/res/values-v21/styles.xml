<resources xmlns:tools="http://schemas.android.com/tools">

  <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">

    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="android:colorPrimaryDark">@color/black</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="material_dialog_background">#FFFFFF</item>
    <item name="material_dialog_title_text_color">#000000</item>
    <item name="material_dialog_message_text_color">#5F5F5F</item>
    <item name="material_dialog_positive_button_color">@color/blue</item>
    <item name="material_dialog_positive_button_text_color">#FFFFFF</item>
    <item name="material_dialog_negative_button_text_color">@color/blue</item>
  </style>

  <style name="bottom_bar_text">
    <item name="fontFamily">@font/poppin_regular</item>
    <item name="android:textSize">10sp</item>
  </style>

  <style name="fragment_title">
    <item name="fontFamily">@font/poppin_bold</item>
    <item name="android:textSize">28sp</item>
    <item name="android:textColor">#000000</item>
  </style>

  <style name="stats_update">
    <item name="android:textColor">@color/white</item>
    <item name="fontFamily">@font/poppin_regular</item>
    <item name="android:textSize">14sp</item>
  </style>

  <style name="stats_big_text">
    <item name="android:textColor">@color/blue</item>
    <item name="fontFamily">@font/poppin_bold</item>
    <item name="android:textSize">50sp</item>
  </style>

  <style name="grid_stats_text">
    <item name="android:textColor">@color/blue</item>
    <item name="fontFamily">@font/poppin_bold</item>
    <item name="android:textSize">22sp</item>
  </style>

  <style name="grid_stats_small">
    <item name="fontFamily">@font/poppin_medium</item>
    <item name="android:textSize">13sp</item>
  </style>

  <style name="new_cases_increment">
    <item name="android:textColor">@color/white</item>
    <item name="fontFamily">@font/poppin_regular</item>
    <item name="android:textSize">14sp</item>
    <item name="android:layout_marginBottom">@dimen/padding_5dp</item>
    <item name="android:layout_marginEnd">@dimen/margin_10dp</item>
  </style>

  <style name="new_cases_increment_num">
    <item name="android:textColor">@color/blue</item>
    <item name="fontFamily">@font/poppin_bold</item>
    <item name="android:textSize">14sp</item>
    <item name="android:layout_marginBottom">@dimen/padding_5dp</item>
    <item name="android:layout_marginEnd">@dimen/margin_10dp</item>
  </style>

  <style name="grid_text_titles">
    <item name="android:textColor">@color/white</item>
    <item name="fontFamily">@font/poppin_regular</item>
    <item name="android:textSize">13sp</item>
  </style>

  <style name="sources">
    <item name="fontFamily">@font/poppin_bold</item>
    <item name="android:textSize">11sp</item>
  </style>

  <style name="search_style">
    <item name="fontFamily">@font/poppin_medium</item>
    <item name="android:textColorHint">@android:color/white</item>
    <item name="abb_textSize">13dp</item>
  </style>

  <style name="affected_sources">
    <item name="fontFamily">@font/poppin_bold</item>
    <item name="android:textSize">15sp</item>
  </style>

  <style name="countryDetails">
    <item name="fontFamily">@font/poppin_medium</item>
    <item name="android:textSize">16sp</item>
    <item name="android:textColor">#000000</item>
  </style>

  <style name="countrySubDetails">
    <item name="fontFamily">@font/poppin_regular</item>
    <item name="android:textSize">12sp</item>
  </style>

  <style name="continent">
    <item name="fontFamily">@font/poppin_regular</item>
    <item name="android:textSize">11sp</item>
  </style>

</resources>